{
    "extends": ["prettier", "@typhonjs-fvtt/eslint-config-foundry.js", "eslint:recommended", "plugin:@typescript-eslint/recommended"],
    "plugins": ["prettier", "@typescript-eslint"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 8,
        "requireConfigFile": false
    },
    "rules": {
        "prettier/prettier": ["error"]
    },
    "ignorePatterns": ["__mocks__/**/*", "scripts/**/*.test.ts", "scripts/panels/**/*.ts"]
}
